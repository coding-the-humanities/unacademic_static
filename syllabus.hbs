  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
          </button>
          <a class="navbar-brand" href="./">Unacademic</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="./syllabus.html">Syllabus</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div id="slide-panel">
      <button type="button" class="btn btn-danger" id="opener"><i class="fui-question-circle"></i></button>
      <h6>Level 1</h6>
      <ul>
        <li><a href="./000_HTML.html">HTML</a></li>
        <li><a href="./000_CSS.html">CSS</a></li>
        <li><a href="./000_Gists.html">Gists</a></li>
        <li><a href="./000_City_Walk.html">City Walk</a></li>
      </ul>
      <h6>Level 2</h6>
       <ul>
        <li><a href="./001_Dev_Tools.html">Dev Tools</a></li>
        <li><a href="./001_DOM.html">DOM</a></li>
        <li><a href="./001_JSON.html">JSON</a></li>
        <li><a href="./001_Templating.html">Templating</a></li>
      </ul>
    </div>

    <div class="row customHero">
      <div class="container">
        <div class="hero-unit">
          <div class="col-xs-9">
            <h3>{{ title }}</h3>
          </div>
        </div>
      </div>
    </div>


    <div class="container">
        <section class="course_content syllabuscontent">
          <h4>Course Content</h4>
          {{{markdown course_content}}}
        </section>

        <section class="time_requirement syllabuscontent">
          <h4>Time Requirement</h4>
          {{{markdown time_requirement}}}
        </section>

        <section class="schedule syllabuscontent">
          <h4>Program</h4>
          <section class="meeting">
            <table class="table">
              <thead>
                <tr>
                  <th>Location</th>
                  <th>Date</th>
                  <th>Time</th>
                </tr>
              </thead>
              <tbody>
               {{#each schedule}}
                <tr>
                  <td>{{location}}</td>
                  <td>{{date}}</td>
                  <td>{{time}}</td>
                </tr>
               {{/each}}
              </tbody>
            </table>
          </section>
        </section>

        {{#with assessment}}
        <section class="assessment syllabuscontent">
          <h4>Assessment</h4>
          <p>{{{markdown description}}}</p>

          <h5>Review</h5>
          <ul>
            {{#each review}}
            <li><p>{{this}}</p></li>
            {{/each}}
          </ul>

          <h5>Completion</h5>
          <p>{{completion}}</p>

          <h5>Criteria</h5>
          <ul>
            {{#each review}}
            <li><p>{{this}}</p></li>
            {{/each}}
          </ul>

          <h5>Deadlines</h5>
          <ul>
            {{#each deadlines}}
            <li><p>{{this}}</p></li>
            {{/each}}
          </ul>
        </section>
        {{/with}}
    </div>


